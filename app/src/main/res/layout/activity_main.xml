<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fju.mid2.MainActivity">

    <Button
        android:id="@+id/b_b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="功能1"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/b_b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="功能2"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/b_b1"
        android:layout_marginLeft="-8dp"
        app:layout_constraintLeft_toLeftOf="@+id/b_b1" />

    <Button
        android:id="@+id/b_b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="功能3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/b_b2"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/b_b2" />

    <Button
        android:id="@+id/b_b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="功能4"
        app:layout_constraintTop_toBottomOf="@+id/b_b3"
        android:layout_marginLeft="-25dp"
        app:layout_constraintLeft_toLeftOf="@+id/b_b3" />

    <Button
        android:id="@+id/b_b5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="功能5"
        app:layout_constraintTop_toBottomOf="@+id/b_b4"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/b_b4" />

    <Button
        android:id="@+id/b_b6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="功能6"
        app:layout_constraintTop_toBottomOf="@+id/b_b5"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/b_b5" />

    <Button
        android:id="@+id/b_b7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="功能7"
        app:layout_constraintTop_toBottomOf="@+id/b_b6"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/b_b6" />

    <Button
        android:id="@+id/b_b8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="6dp"
        android:text="功能8"
        app:layout_constraintLeft_toLeftOf="@+id/b_b7"
        app:layout_constraintTop_toBottomOf="@+id/b_b7" />
</android.support.constraint.ConstraintLayout>
